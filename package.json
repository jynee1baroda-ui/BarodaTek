{
  "name": "champions-arena-api",
  "version": "2.0.0",
  "description": "Champions Arena AI Assistant - BarodaTek API Platform with Gaming, Matchmaking, and Real-time Features",
  "main": "server.js",
  "author": "BarodaTek.com - Advanced Development Solutions",
  "license": "MIT",
  "homepage": "https://barodatek.com",
  "repository": {
    "type": "git",
    "url": "https://github.com/barodatek/champions-arena-api"
  },
  "keywords": [
    "champions-arena",
    "gaming-api",
    "matchmaking",
    "api",
    "ai-assistant",
    "real-time",
    "websocket",
    "barodatek"
  ],
  "engines": {
    "node": ">=18.x"
  },
  "scripts": {
    "start": "node server.js",
    "dev": "node server.js",
    "dev:watch": "nodemon server.js",
    "test": "jest --coverage",
    "test:watch": "jest --watch",
    "test:unit": "jest tests/api.test.js",
    "test:integration": "jest tests/integration.test.js",
    "test:full": "npm run lint && npm run test && npm run link-check && npm run security-audit",
    "test:puppeteer": "node tools/puppeteer/game-visibility-test.js",
    "lint": "echo \"Linting...\" && exit 0",
    "link-check": "node scripts/link-checker.js",
    "security-audit": "node scripts/security-audit.js",
    "build": "echo \"Build complete\"",
    "vercel-build": "echo \"Vercel build complete\"",
    "deploy": "vercel --prod",
    "pre-deploy": "npm run test:full && node scripts/prepare-deploy.js"
  },
  "dependencies": {
    "bcrypt": "^6.0.0",
    "body-parser": "^1.20.2",
    "compression": "^1.7.4",
    "cors": "^2.8.5",
    "express": "^4.18.2",
    "express-rate-limit": "^7.1.5",
    "helmet": "^7.1.0",
    "jsonwebtoken": "^9.0.2",
    "multer": "^1.4.5-lts.1",
    "nodemailer": "^7.0.9",
    "socket.io": "^4.7.5",
    "uuid": "^13.0.0",
    "ws": "^8.14.2"
  },
  "devDependencies": {
    "axios": "^1.12.2",
    "jest": "^29.7.0",
    "linkinator": "^4.1.3",
    "nodemon": "^3.0.2",
    "supertest": "^6.3.4"
  },
  "optionalDependencies": {
    "puppeteer": "^24.25.0"
  }
}
